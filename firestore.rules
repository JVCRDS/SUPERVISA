rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que usuários autenticados leiam/escrevam apenas seus próprios dados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Para outras collections, ajuste conforme necessidade
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}